<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="setting_edit_text">
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="setting_edit">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:inputType">text</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="setting_checkbox_text">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="setting_checkbox">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="btn_margin">
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>
    
    <style name="btn_start_to_list" parent="btn_margin">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="btn_list_select_page" parent="btn_margin">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="msg_list_item_text">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>